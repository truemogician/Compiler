<Window x:Class="Visualizer.CMinusMinusLoader"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		Title="加载C--" Height="120" Width="300" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
	<Grid TextBlock.FontSize="15" TextBlock.FontFamily="楷体">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Button 
			x:Name="LoadTableButton" 
			Grid.Column="0" 
			Margin="25, 25, 15, 25"
			Click="ClickButton"
		>从分析表文件</Button>
		<Button 
			x:Name="CreateNewButton" 
			Grid.Column="1" 
			Margin="15,25,25,25" 
			Click="ClickButton"
		>从文法源新建</Button>
		<ProgressBar x:Name="ProgressBar" Grid.Column="0" Grid.ColumnSpan="2" Height="25" Margin="20,0,20,0" Visibility="Collapsed"/>
	</Grid>
</Window>
